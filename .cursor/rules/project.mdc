version: 1

linting:
  enabled: true
  rules:
    - use-ruff:
        config: pyproject.toml

package_management:
  manager: uv
  requirements_file: requirements.txt

containerization:
  runtime: podman
  os: macOS

ai_agents:
  managing_agent:
    responsibilities:
