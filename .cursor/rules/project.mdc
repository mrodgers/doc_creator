  exploratory: true
  tool: neo4j
  status: optional

reuse_policy:
  encouraged: true
  preference:
    - existing internal libraries
    - open-source extraction tools
    - existing AI API integrations

phased_development:
  phases:
    - environment_setup
    - agent_implementation
    - gap_analysis
    - ui_development

